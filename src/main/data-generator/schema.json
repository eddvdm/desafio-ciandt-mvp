{
  "type": "array",
  "minItems": 1000,
  "maxItems": 1000,
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "#/definitions/transactionId"
      },
      "account": {
        "$ref": "#/definitions/accountId"
      },
      "value": {
        "$ref": "#/definitions/amount"
      },
      "operation": {
        "type": "string",
        "pattern": "credit|debt"
      },
      "datetime": {
        "type": "string",
        "format": "date-time",
        "faker": "date.recent"
      }
    },
    "required": ["id", "account", "value", "operation", "datetime"]
  },
  "definitions": {
    "transactionId": {
      "type": "integer",
      "minimum": 1,
      "unique": true,
      "exclusiveMinimum": true
    },
    "accountId": {
      "type": "integer",
      "minimum": 0,
      "maximum": 20
    },
    "amount": {
      "type": "number",
      "minimum": -1000,
      "maximum": 1000,
      "multipleOf": 0.01
    }
  }
}
